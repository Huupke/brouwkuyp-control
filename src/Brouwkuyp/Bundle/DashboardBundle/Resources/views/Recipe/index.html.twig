{% extends 'BrouwkuypDashboardBundle::base.html.twig' %}

{% block content %}
<div class="table-responsive">
    <table class="table table-hover">
        <thead>
        <tr>
            <td>Naam</td>
        </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
        <tr>
            <td><a href="{{ path('recipe_detail', recipe.routeParams) }}">{{ recipe.name }}</a></td>
        </tr>
        {% else %}
        <tr>
            <td>Er zijn nog geen recepten ingevoerd</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
